<!DOCTYPE html>
<html>
  <head>
    <title>Fubar</title>
    <%= csrf_meta_tags %>

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

    <meta name="viewport" content="width=device-width, initial-scale=1">

  </head>

  <body>
    <nav id="custom-bootstrap-menu" class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <%= link_to "Bike Berlin", root_path, :class=> "navbar-brand" %>
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-menubuilder"><span class="sr-only">Toggle navigation</span><span class="icon-bar"></span><span class="icon-bar"></span><span class="icon-bar"></span>
          </button>
        </div>
        <div class="collapse navbar-collapse navbar-menubuilder">
          <ul class="nav navbar-nav navbar-left">
            <li><%= link_to "Home", index_path %></li>
            <li><%= link_to "About", about_path %></li>
            <li><%= link_to "Products", products_path %></li>
            <li><%= link_to "Contact", contact_path %></li>
            <li>
              <%= form_tag("/products", method: "get", class: "navbar-form navbar-right", role: "search" ) do %>
                <%= text_field_tag(:q, nil, class: "form-control") %>
                <%= submit_tag("Search", class: "btn btn-default") %>
              <% end %>
            </li>
          </ul>
          <ul class="nav navbar-nav pull-right">
            <li>
              <% if user_signed_in? %>
                <%= link_to('Logout', destroy_user_session_path, :method => :delete) %>
              <% else %>
                <%= link_to('Login', new_user_session_path) %>
              <% end %>
            </li>
          </ul>
        </div>
      </div>
    </nav>
    <% if notice %>
      <p id="notice" class="alert alert-info"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p id="notice" class="alert alert-danger"><%= alert %></p>
    <% end %>
    <div class="space-50"></div>

    <%= yield %>

    <footer>
      &copy; 2015 Bike Berlin
    </footer>
    
  </body>
</html>
